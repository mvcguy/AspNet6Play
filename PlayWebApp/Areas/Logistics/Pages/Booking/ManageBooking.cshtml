@page

@model ManageBookingModel

@{
    ViewData["Title"] = "Manage bookings";
    ViewData["SelectedPage"] = "ManageBooking";
}

@section ToolBar{
<div class="row">
    <partial name="_ActionBar" />

    <div class="row g-1">
        <div id="serverMessages">

        </div>
    </div>
</div>
}


@if (Model != null)
{
    <form class="row g-1" id="frmBooking" method="post">
        <div class="col-12">
            <label asp-for="BookingVm.RefNbr"></label>
            <input asp-for="BookingVm.RefNbr" class="form-control" aria-required="true" />
            <span asp-validation-for="BookingVm.RefNbr" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="BookingVm.Description"></label>
            <input asp-for="BookingVm.Description" class="form-control" aria-required="true" />
            <span asp-validation-for="BookingVm.Description" class="text-danger"></span>
        </div>

        <ul class="nav nav-tabs" id="tabsBooking" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tabBookingDetails" data-bs-toggle="tab" data-bs-target="#tabBookingItemsContent"
                type="button" role="tab" aria-controls="tabBookingItemsContent" aria-selected="true">Details</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tabBookingItemsContent" role="tabpanel" aria-labelledby="tabPrices">
                <div class="row">
                    <div class="col-sm-2">Item ID</div>
                    <div class="col-sm-2">Description</div>
                    <div class="col-sm-2">Unit cost</div>
                    <div class="col-sm-2">Quantity</div>
                    <div class="col-sm-2">Ext. Cost</div>
                    <div class="col-sm-2">Discount</div>
                </div>
            </div>
        </div>

    </form>

}


@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script>

    $(document).ready(function () {
        var srv = new persistenceService({
            url: "https://localhost:7096/api/v1/Bookings/",
            formId: "frmBooking",
            idField: 'BookingVm_RefNbr',
            msgContainer: "serverMessages",
            getIdCallback: function () {
                return $('#BookingVm_RefNbr').val();
            },
            nextEndpoint: function () {
                return $('#BookingVm_RefNbr').val() + "/next";
            },
            prevEndpoint: function () {
                return $('#BookingVm_RefNbr').val() + "/previous";
            },
            onAdd: function (id) {
                $('#BookingVm_RefNbr').val('');
                $('#BookingVm_Description').val('');

                if (id && id !== '')
                    $('#BookingVm_RefNbr').val(id);

            },
            lastEndpoint: "last",
            firstEndpoint: "first",
            onGetResponse: function (response) {
                $('#BookingVm_RefNbr').val(response.bookingNumber);
                $('#BookingVm_Description').val(response.description);
            },
            deleteEndpoint: function () {
                return $('#BookingVm_RefNbr').val();
            },
            onDeleteResponse: function (response) {

            },
            onSaveResponse: function (response) {

            },
        });
        srv.registerHandlers();
        srv.dumpParams();
    });

</script>

}