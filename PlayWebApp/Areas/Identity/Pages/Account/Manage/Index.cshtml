@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <form id="profile-form" method="post">
        <div class="row">
            <div class="col-md-6">
                <h3>@ViewData["Title"]</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h3>Shipping address</h3>
                @* start > address info *@

                <div class="form-floating">
                    <select asp-for="Input.AddressVm.AddressCode" asp-items="Model.UserAddressesList"
                        class="form-control"></select>
                    <label asp-for="Input.AddressVm.AddressCode" class="form-label"></label>
                    <span asp-validation-for="Input.AddressVm.AddressCode" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.AddressVm.StreetAddress" class="form-control" disabled />
                    <label asp-for="Input.AddressVm.StreetAddress" class="form-label"></label>
                    <span asp-validation-for="Input.AddressVm.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.AddressVm.City" class="form-control" disabled />
                    <label asp-for="Input.AddressVm.City" class="form-label"></label>
                    <span asp-validation-for="Input.AddressVm.City" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.AddressVm.PostalCode" class="form-control" disabled />
                    <label asp-for="Input.AddressVm.PostalCode" class="form-label"></label>
                    <span asp-validation-for="Input.AddressVm.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.AddressVm.Country" class="form-control" disabled />
                    <label asp-for="Input.AddressVm.Country" class="form-label"></label>
                    <span asp-validation-for="Input.AddressVm.Country" class="text-danger"></span>
                </div>

                @* end > address info *@
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    var ajaxSelector = function (options) {
        var elemId = options.elemId;
        var url = options.url;
        var onServerResponse = options.onServerResponse;
        var onError = options.onError;

        var registerHandler = function () {
            $('#' + elemId).on('change', function (e) {
                var selectedValue = $(this).val();
                console.log(selectedValue);

                $.ajax({
                    url: url + selectedValue,
                    method: "GET"
                }).then(function done(response) {
                    onServerResponse(response);
                }, function error(error) {
                    onError(error);
                });

            });
        };

        return {
            registerHandler
        };
    };
</script>

<script>
    $(document).ready(function () {
        var options = {
            url: "https://localhost:7096/api/v1/addresses/",
            elemId: "Input_AddressVm_AddressCode",
            onServerResponse: function (response) {
                $('#Input_AddressVm_StreetAddress').val(response.streetAddress);
                $('#Input_AddressVm_PostalCode').val(response.postalCode);
                $('#Input_AddressVm_City').val(response.city);
                $('#Input_AddressVm_Country').val(response.country);

            },
            onError: function (error) {
                console.error(error);
            }
        };
        var addSel = new ajaxSelector(options);
        addSel.registerHandler();
    });
</script>

}
